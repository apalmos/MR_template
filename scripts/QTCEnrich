cat<<'EOT'>> QQ_plot.sh
#!/bin/bash
#SBATCH -n 10
#SBATCH --nodes=1
#SBATCH --mem-per-cpu=19G
#SBATCH -t 48:00:00

/scratch/groups/ukbiobank/usr/alish/AD_MR/QTLEnrich/src/qqplot_qtlenrich.py \
--gwas_file /scratch/groups/ukbiobank/usr/alish/AD_MR/sensitivity/AD_outcome/QTL/LRR1.gz \
--qtl_file QTLEnrich_significant_gwas_p_values_best_eqtl_LRR1.gz_Brain_Cortex_Apr11_2022.txt \
		      --pvalue_null_matrix $matrix \
                      --gwas_background \
                      --matched_null_background \
		      --num_permutations \
                      --confidence_interval \
                      --show_title \
                      --qqplot_title $title \
                      --qtl_type $qtl \
                      --tissue_label $tissue

EOT
