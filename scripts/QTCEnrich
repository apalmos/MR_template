cat<<'EOT'>> start_QTL.sh
#!/bin/bash
#SBATCH -n 20
#SBATCH --mem-per-cpu=19G
#SBATCH -t 48:00:00

while IFS=$'\t' read -r -a myArray

do

  trimmedfile="$(echo -e "${myArray[1]}" | tr -d '[:space:]')"


  sh qtl.sh $trimmedfile ${myArray[0]}


done < qtl_files.txt
EOT


cat<<'EOT'>> qtl.sh
#!/bin/bash
#SBATCH -n 10
#SBATCH --nodes=1
#SBATCH --mem-per-cpu=19G
#SBATCH -t 48:00:00

file=$1

/scratch/groups/ukbiobank/usr/alish/AD_MR/QTLEnrich/src/QTLEnrichV2.py \
-G /scratch/groups/ukbiobank/usr/alish/AD_MR/sensitivity/AD_outcome/QTL/"${file}".gz \
-D /scratch/groups/ukbiobank/usr/alish/AD_MR/QTLEnrich/data/AD_GTEx/ \
-F .v8.egenes.txt.gz \
-Q 'best_eqtl' \
-C /scratch/groups/ukbiobank/usr/alish/AD_MR/QTLEnrich/data/GTEx_v8_Confounders_Table_49Tiss_Global.txt.gz \
-N /scratch/groups/ukbiobank/usr/alish/AD_MR/QTLEnrich/data/GTEx_v8_Null_Table_49Tiss_Global.txt.gz \
-g /scratch/groups/ukbiobank/usr/alish/AD_MR/QTLEnrich/data/GENCODE_26_df.txt \
-O /scratch/groups/ukbiobank/usr/alish/AD_MR/sensitivity/AD_outcome/QTL/output \
--exp_label ${file} \
--keep_null_variants

EOT


